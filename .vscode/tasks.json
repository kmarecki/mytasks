{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "isShellCommand": true,
    "showOutput": "always",
    "args": [],
    "tasks": [
        {
            "taskName": "server build",
            "command": "dotnet",
            "args": [
                "build"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "isShellCommand": true,
            "showOutput": "always",
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "client build",
            "command": "tsc",
            "isShellCommand": true,
            "showOutput": "always",
            "args": [""],
            "problemMatcher": "$tsc"
        },
        {
            "taskName": "build",
            "isBuildCommand": true,
            "dependsOn": [
                "server build",
                "client build"
            ]
        },
        {
            "taskName": "deploy",
            "command": "ng",
            "isShellCommand": true,
            "showOutput": "always",
            "args": ["build", "-pr", "false"],
            "problemMatcher": "$tsc"
        }
    ]
}